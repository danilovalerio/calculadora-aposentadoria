<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_resultado2"
        android:layout_width="335dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Calcule quanto tempo falta para sua aposentadoria!"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_sexo"
        android:layout_width="143dp"
        android:layout_height="@dimen/altura_campo"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Escolha seu sexo:"
        app:layout_constraintEnd_toStartOf="@+id/spn_sexo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_resultado2" />

    <Spinner
        android:id="@+id/spn_sexo"
        android:layout_width="200dp"
        android:layout_height="@dimen/altura_campo"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_resultado2" />

    <TextView
        android:id="@+id/tv_idade"
        android:layout_width="144dp"
        android:layout_height="@dimen/altura_campo"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Informe sua idade:"
        app:layout_constraintEnd_toStartOf="@+id/et_idade"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sexo" />

    <EditText
        android:id="@+id/et_idade"
        android:layout_width="200dp"
        android:layout_height="@dimen/altura_campo"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spn_sexo" />

    <Button
        android:id="@+id/btn_calcular"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Calcular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_idade" />

    <TextView
        android:id="@+id/tv_resultado"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/altura_campo"
        android:layout_marginTop="44dp"
        android:text="Resultado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_calcular" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="266dp"
        android:layout_height="236dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_resultado"
        app:srcCompat="@mipmap/ic_aposentadoria" />


</androidx.constraintlayout.widget.ConstraintLayout>